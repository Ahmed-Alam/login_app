#:set color [0.23, 0.35, 0.45, 0.9]
SM:
    Login:
    SignUp:
    Profile:

<Login>:
    name: 'log in'
    MDFloatLayout:
        pos_hint:{'center_x':0.5, 'top':0.95}
        Image:
            source: 'login2.png'
            pos_hint: {'center_x': 0.5,'top': 1}
            size_hint: 0.17, 0.17
            # transparency: 0.6
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 0.95, 0.8
        pos_hint: {'center_x': 0.5,'top': 0.9}
        spacing: dp(5)
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, 0.4
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            MDLabel:
                text: "Log in"
                size_hint: 1, 0.9
                pos_hint: {'center_x': 0.5, 'top': 0.1}
                halign: "center"
                font_size: "30sp"
        # Email & password fields
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, 0.55
            pos_hint: {'center_x': 0.5}
            # Email field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3
                pos_hint: {'center_x': 0.5}
                # MDLabel:
                #     text: 'Email'
                #     size_hint_x: 0.25
                MDTextField:
                    id: usr_email
                    hint_text: 'enter your email'
                    mode: 'fill'
                    size_hint_x: 0.75
                    font_size: 16
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # Password field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3
                pos_hint: {'center_x': 0.5}
                # MDLabel:
                #     text: 'Password'
                #     size_hint_x: 0.25
                MDTextField:
                    id: usr_password
                    hint_text: 'enter your password'
                    mode: 'fill'
                    password: True
                    size_hint_x: 0.75
                    font_size: 16
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # login button
            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint: 0.4, 0.3
                MDFillRoundFlatButton:
                    text: "Login"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 1, 0.8
                    font_size: dp(20)
                    text_color: 'white'
                    md_bg_color: color
                    on_release:
                        root.log_in()

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5}
                size_hint: .85, .5
                MDLabel:
                    text: "Don't have an account?"
                    pos_hint: {'center_y': 0.5}
                    font_size: '16sp'
                MDFlatButton:
                    text: "Sign Up"
                    size_hint: 0.4, 0.55
                    pos_hint: {'center_y': 0.5}
                    font_size: '16sp'
                    theme_text_color: 'Custom'
                    text_color: color
                    on_release:
                        root.manager.current = 'sign up'
                        root.manager.transition.direction = 'left'

<SignUp>:
    name: 'sign up'
    MDBoxLayout:
        pos_hint: {'center_x':0.5, 'top':1}
        MDIconButton:
            icon: 'arrow-left-bold'
            pos_hint: {'left': 0, 'top': 1}
            icon_size: '48sp'
            on_release:
                root.manager.current = 'log in'
                root.manager.transition.direction = 'right'
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 0.95, 0.80
        pos_hint: {'center_x': 0.5,'top': 0.95}
        spacing: dp(5)
        MDLabel:
            text: "Create an account"
            text_color: color
            size_hint: 1, 0.2
            halign: "center"
            font_size: "30sp"
        # Email & password fields
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.95, 0.5
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            # Name field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3
                pos_hint: {'center_x': 0.5}
                MDTextField:
                    id: name
                    hint_text: 'enter your name'
                    mode: 'fill'
                    size_hint_x: 0.75
                    font_size: '16sp'
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # Email field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3
                pos_hint: {'center_x': 0.5}
                MDTextField:
                    id: email
                    hint_text: 'enter your email'
                    mode: 'fill'
                    size_hint_x: 0.75
                    font_size: '16sp'
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # Password field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 60
                pos_hint: {'center_x': 0.5}
                MDTextField:
                    id: password
                    hint_text: 'enter your password'
                    mode: 'fill'
                    password: True
                    size_hint_x: 0.75
                    font_size: '16sp'
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # Confirm password field
            MDBoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.3
                pos_hint: {'center_x': 0.5}
                MDTextField:
                    id: password_confirm
                    hint_text: 'Confirm your password'
                    mode: 'fill'
                    password: True
                    size_hint_x: 0.75
                    font_size: '16sp'
                    pos_hint: {'center_y': 0.5}
                    multiline: False
                    write_tab: False
            # login button
            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                size_hint: 0.4, 0.3
                MDFillRoundFlatButton:
                    text: "Sign Up"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    size_hint: 1, None
                    font_size: dp(20)
                    text_color: 'white'
                    md_bg_color: color
                    on_release: root.sign_up()

            MDBoxLayout:
                orientation: 'horizontal'
                pos_hint: {'center_x': 0.5, 'center_y': 0.4}
                size_hint: 0.67, 0.2
                spacing: dp(5)
                padding: dp(1)
                MDLabel:
                    text: "have an account?"
                    pos_hint: {'center_y': 0.5}
                    font_size: '16sp'
                    size_hint: 0.75, None
                MDFlatButton:
                    text: "Log in"
                    size_hint: 0.25, None
                    pos_hint: {'center_y': 0.5}
                    font_size: '16sp'
                    theme_text_color: 'Custom'
                    text_color: color
                    on_release:
                        root.manager.current = 'log in'
                        root.manager.transition.direction = 'right'

