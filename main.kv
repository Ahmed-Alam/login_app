            pos_hint: {'center_x':0.5, 'top':0.8}
            size_hint: 1, 0.15
            halign: "center"
            font_style: 'H3'
            color: color
        MDBoxLayout:
            # md_bg_color: 'red'
            orientation: "vertical"
            pos_hint: {'center_x': 0.5,'top': 0.85}
            # size_hint: 1, 1
            spacing: dp(10)
            MDLabel:
                id: profile_usr
                text: ""
                markup: True
                size_hint: 1, 0.15
                pos_hint: {'top':0.85}
                font_size: "16sp"
            MDLabel:
                id: profile_email
                text: ""
                markup: True
                size_hint: 1, 0.15
                pos_hint: {'top':0.70}
                font_size: "16sp"
            MDLabel:
                id: profile_password
                text: ""
                markup: True
                size_hint: 1, 0.15
                pos_hint: {'top':0.55}
                font_size: "16sp"